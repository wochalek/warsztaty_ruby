<%= form_for :post, url: posts_path do |f| %>
  
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <ul>
        <% @post.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= f.label :author, 'Autor' %><br>
    <%= f.text_field :author %>
  </p>

  <p>
   <%= f.label :title, 'Tytuł' %><br>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :text, 'Treść' %><br>
    <%= f.text_area :text %>
  </p>

  <p>
    <%= f.submit 'Zapisz' %>
  </p>
<% end %>