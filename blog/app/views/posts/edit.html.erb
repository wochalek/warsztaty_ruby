<%= form_for :post, url: posts_path(@post) do |f| %>
  <p>
    <%= f.label :author, 'Autor' %><br>
    <%= f.text_field :author %>
  </p>

  <p>
    <%= f.label :title, 'Tytuł' %><br>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :text, 'Treść' %><br>
    <%= f.text_area :text %>
  </p>

  <p>
    <%= f.submit 'Zapisz' %>
  </p>
<% end %>


<%= link_to 'Wróć do listy', posts_path %>